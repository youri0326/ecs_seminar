{
  "family": "ecs-seminar-task-php",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::527151769671:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "php",
      "image": "527151769671.dkr.ecr.ap-northeast-1.amazonaws.com/php",
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "portMappings": [
        {"containerPort": 80}
      ],
      "environment": [
        { "name": "DB_HOST", "value": "ecs-db.cnabwrjqs09i.ap-northeast-1.rds.amazonaws.com" },
        { "name": "DB_USER", "value": "root" },
        { "name": "DB_PASS", "value": "root1234" },
        { "name": "DB_NAME", "value": "sampledb" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ecs-seminar-task",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "php"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024"
}
