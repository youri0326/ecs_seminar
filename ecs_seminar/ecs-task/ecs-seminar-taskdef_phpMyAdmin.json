{
  "family": "ecs-seminar-task-phpmyadmin",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::527151769671:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "phpmyadmin",
      "image": "527151769671.dkr.ecr.ap-northeast-1.amazonaws.com/phpmyadmin:5.2.1",
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "portMappings": [
        {"containerPort": 80}
      ],
      "environment": [
        { "name": "PMA_HOST", "value": "ecs-db.cnabwrjqs09i.ap-northeast-1.rds.amazonaws.com" },
        { "name": "PMA_USER", "value": "root" },
        { "name": "PMA_PASSWORD", "value": "root1234" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ecs-seminar-task",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "phpmyadmin"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024"
}
